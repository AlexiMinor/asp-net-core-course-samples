@model NewsAggregator.Core.DataTransferObjects.NewsDto
    
<div class="card col-sm-12 col-md-6 col-lg-4 news-card">
    <div class="card-body">
        <h5 class="card-title">@Model.Article</h5>
        @*<h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>*@
        <p class="card-text">@Model.Summary</p>
        <a class="card-link" asp-action="Details" asp-route-id="@Model.Id">Читать на аггрегаторе</a>

        <a asp-host="onliner.by">Читать в источнике</a>
    </div>
</div>
